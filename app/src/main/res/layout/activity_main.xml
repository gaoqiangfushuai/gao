<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@mipmap/menu_background"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <com.example.zwq.mygiftapp.view.MySlidingPane
        android:id="@+id/sliding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:clickable="true"
            android:gravity="left"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/my_image"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#ffffff"
                    android:src="@mipmap/def_loading"
                    android:layout_gravity = "center_vertical"
                    android:scaleType="centerCrop"
                    android:layout_margin="20dp"/>
                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_gravity = "center_vertical"
                    android:text="请登录"/>
            </LinearLayout>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"

                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_margin="10dp"
                    android:button="@null"
                    android:textSize="24sp"
                    android:onClick="onClick"
                    android:drawableLeft="@mipmap/icon_home"
                    android:drawablePadding="10dp"
                    android:text="首页" />

                <RadioButton
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_margin="10dp"
                    android:drawablePadding="10dp"
                    android:onClick="onClick"
                    android:drawableLeft="@mipmap/my_gift"
                    android:textSize="24sp"
                    android:button="@null"
                    android:text="我的礼包" />

                <RadioButton
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:layout_margin="10dp"
                    android:onClick="onClick"
                    android:drawableLeft="@mipmap/about_me"
                    android:drawablePadding="10dp"
                    android:button="@null"
                    android:text="关于我们" />

                <RadioButton
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_margin="10dp"
                    android:drawablePadding="10dp"
                    android:onClick="onClick"
                    android:drawableLeft="@mipmap/icon_settings"
                    android:textSize="24sp"
                    android:button="@null"
                    android:text="设置" />
            </RadioGroup>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linear_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:background="#339966"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_gift_title"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"/>
                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索"
                    android:textColor="#ffffff"
                    android:background="#00000000"
                    android:layout_gravity="right"
                    />
            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <RelativeLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/split_home"></RelativeLayout>
                <View
                    android:id="@+id/split_home"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"
                    android:layout_above="@+id/rg"></View>
                <RadioGroup
                    android:id="@+id/rg"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/btn_gift"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="0sp"
                        android:button="@null"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:drawableTop="@drawable/bottom_gift"
                        android:checked="true"
                        />
                    <RadioButton
                        android:id="@+id/btn_open"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="0sp"
                        android:button="@null"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:drawableTop="@drawable/bottom_open"
                        />
                    <RadioButton
                        android:id="@+id/btn_hot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="0sp"
                        android:button="@null"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:drawableTop="@drawable/bottom_hot"
                        />
                    <RadioButton
                        android:id="@+id/btn_special"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="0sp"
                        android:button="@null"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:drawableTop="@drawable/bottom_special"
                        />
                </RadioGroup>
            </RelativeLayout>
        </LinearLayout>

    </com.example.zwq.mygiftapp.view.MySlidingPane>


</RelativeLayout>
