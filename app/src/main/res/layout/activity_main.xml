<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/split"
        ></RelativeLayout>
    <View
        android:id="@+id/split"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/rg"
        android:background="@color/colorPrimary"></View>
   <RadioGroup
       android:id="@+id/rg"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_alignParentBottom="true">
       <RadioButton
           style="@style/style_bottom_rg"
           android:id="@+id/rb_message"
           android:drawableTop="@drawable/message_bottom_rg"
           android:textSize="0sp"
           android:checked="true"
           />
       <RadioButton
           style="@style/style_bottom_rg"
           android:drawableTop="@drawable/contacts_bottom_rg"
           android:textSize="0sp"
           android:id="@+id/rb_contacts"
           />
       <RadioButton
           style="@style/style_bottom_rg"
           android:drawableTop="@drawable/dynamic_bottom_rg"
           android:textSize="0sp"
           android:id="@+id/rb_dynamic"
           />
   </RadioGroup>
</RelativeLayout>
