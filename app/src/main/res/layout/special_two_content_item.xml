<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_margin="15dp"
        android:id="@+id/img_special_two_list"
        android:src="@mipmap/gift_pic"
        android:layout_centerVertical="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_special_two_name"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/img_special_two_list"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_special_two_desc"
        android:singleLine="true"
        android:layout_alignBottom="@+id/img_special_two_list"
        android:layout_toRightOf="@+id/img_special_two_list"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_special_two_type"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_special_two_list"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_special_two_size"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_special_two_type"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/tv_special_two_btn"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="下载"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="#339966"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>