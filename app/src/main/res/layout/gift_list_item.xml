<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_margin="15dp"
        android:id="@+id/img_gift_list"
        android:src="@mipmap/gift_pic"
        android:layout_centerVertical="true"

         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_gift_name"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/img_gift_list"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_gift_num"
        android:layout_alignBottom="@+id/img_gift_list"
        android:layout_toRightOf="@+id/img_gift_list"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_gift_giftName"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_gift_list"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_gift_date"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_gift_num"
        android:layout_alignTop="@+id/tv_gift_num"
        />

    <Button
        android:id="@+id/tv_btn"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="立即领取"
        android:textSize="12sp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:background="#339966"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
