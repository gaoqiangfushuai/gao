<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
        android:id="@+id/gift_vp_ad"
        android:layout_width="match_parent"
        android:layout_height="200dp"></cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager>
    <LinearLayout
        android:id="@+id/layout_point"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_alignBottom="@+id/gift_vp_ad"
        android:layout_marginBottom="10dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/gift_vp_ad"></LinearLayout>
</RelativeLayout>